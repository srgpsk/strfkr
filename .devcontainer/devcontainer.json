{
  "name": "Strfkr",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "webapp",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",

  "remoteUser": "vscode",

  // Devcontainer specific volumes
  "mounts": [
    "source=vscode-server-strfkr,target=/home/vscode/.vscode-server,type=volume",
    "source=vscode-extensions-strfkr,target=/home/vscode/.vscode-server-insiders,type=volume",
    "source=vscode-go-tools,target=/home/vscode/go,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "a-h.templ",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.formatTool": "goimports",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "go.gopath": "/home/vscode/go", 
        "go.goroot": "/usr/local/go",
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "package",
        "go.buildOnSave": "off",
        "go.toolsEnvVars": {
          "CGO_ENABLED": "1",
          "GOMODCACHE": "/home/vscode/go/pkg/mod", 
          "GOCACHE": "/home/vscode/.cache/go-build"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.templ": "html",
          ".githooks/*": "shellscript"
        },
        "emmet.includeLanguages": {
          "templ": "html"
        }
      }
    }
  },

  "postCreateCommand": "go version && .githooks/install.sh && echo 'ðŸŽ‰ Development environment ready!'",

  "containerEnv": {
    "GPG_TTY": "/dev/pts/0",
    "HOME": "/home/vscode"
  },
  
  "forwardPorts": [8080, 8081, 2345, 2346],
  "portsAttributes": {
    "8080": {
      "label": "Webapp",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Scraper", 
      "onAutoForward": "silent"
    },
    "2345": {
      "label": "Delve Debugger (Webapp)",
      "onAutoForward": "silent"
    },
    "2346": {
      "label": "Delve Debugger (Scraper)",
      "onAutoForward": "silent"
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
