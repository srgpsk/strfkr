{ 
  "go.toolsManagement.checkForUpdates": "off",
  "go.useLanguageServer": false,
  "go.survey.prompt": false,
  "go.formatTool": "gofmt",
  "go.lintTool": "staticcheck",
  "go.lintOnSave": "off",
  "go.buildOnSave": "off",
  "go.testOnSave": false,
  "go.coverOnSave": false,
  "go.installDependenciesWhenBuilding": false,
  
  // GitHub Copilot settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "go": true,
    "dockerfile": true,
    "makefile": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "copilot-codex"
  },
  
  // Templ template support
  "files.associations": {
    "*.templ": "html"
  },
  "emmet.includeLanguages": {
    "templ": "html"
  },
  "html.customData": [".vscode/templ.html-data.json"],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/*.tmp": true,
    "**/*.log": true,
    "**/node_modules": true,
    "**/.air.toml": false,
    "**/.air-*.toml": false
  },
  "go.delveConfig": {
    "dlvLoadConfig": {
      "followPointers": true,
      "maxVariableRecurse": 1,
      "maxStringLen": 64,
      "maxArrayValues": 64,
      "maxStructFields": -1
    },
    "apiVersion": 2,
    "stackTraceDepth": 50,
    "showGlobalVariables": true
  },
  
  "containers.environment": {
    "COMPOSE_DOCKER_CLI_BUILD": "1",
    "DOCKER_BUILDKIT": "1"
  }
}
